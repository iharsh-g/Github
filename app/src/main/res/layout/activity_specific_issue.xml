<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E1E">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/activity_specific_issues_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/tab_background"
            app:popupTheme="@style/Theme.MaterialComponents.DayNight.DarkActionBar">

            <ImageView
                android:id="@+id/activity_specific_issues_back_iv"
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:layout_marginEnd="5dp"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/ic_back" />

            <TextView
                android:id="@+id/activity_specific_issues_action_bar_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:background="?selectableItemBackgroundBorderless"
                android:padding="5dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                tools:text="Harsh" />

        </androidx.appcompat.widget.Toolbar>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_specific_issues_toolbar"
            android:layout_margin="5dp"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_4"
                android:padding="10dp">

                <TextView
                    android:id="@+id/specific_issue_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    tools:text="#2611" />

                <ImageView
                    android:id="@+id/specific_issue_url"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="16dp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_open_in_browser" />

                <TextView
                    android:id="@+id/specific_issue_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/specific_issue_number"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="times"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    tools:text="Unable to authorize with my GitHub password (Unathorized/Not Found)" />

                <TextView
                    android:id="@+id/specific_issue_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/specific_issue_title"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="times"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="#1E1D1D"
                    android:textSize="14sp"
                    tools:text="Unable to authorize with my GitHub password (Unathorized/Not Found)" />

                <TextView
                    android:id="@+id/specific_issue_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/specific_issue_body"
                    android:layout_marginStart="15dp"
                    android:textColor="@color/black"
                    tools:text="12 Jan, 2012" />

                <TextView
                    android:id="@+id/specific_issue_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/specific_issue_body"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/black"
                    tools:text="05:30 PM" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>


</ScrollView>